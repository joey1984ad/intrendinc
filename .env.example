# ===========================================
# NestJS Server Environment Configuration
# ===========================================

# Database
# --------
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"
# Alternative database URL variables (fallbacks)
# POSTGRES_PRISMA_URL=""
# POSTGRES_URL=""
# POSTGRES_URL_NO_SSL=""
# POSTGRES_CONNECTION_STRING=""

# ===========================================
# Authentication
# ===========================================

# JWT Configuration
JWT_SECRET="your-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL="http://localhost:3001/api/auth/google/callback"

# Super Admin Users (comma-separated emails)
SUPER_USER_EMAILS="admin@example.com"

# ===========================================
# Facebook API
# ===========================================

FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""
FACEBOOK_ACCESS_TOKEN=""
FACEBOOK_GRAPH_API_VERSION="v21.0"

# ===========================================
# Stripe Payments
# ===========================================

# API Keys
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Individual Plan Price IDs
STRIPE_STARTUP_MONTHLY_PRICE_ID=""
STRIPE_STARTUP_ANNUAL_PRICE_ID=""
STRIPE_PRO_MONTHLY_PRICE_ID=""
STRIPE_PRO_ANNUAL_PRICE_ID=""

# Organization Plan Price IDs
STRIPE_ORGANIZATION_BASIC_MONTHLY_PRICE_ID=""
STRIPE_ORGANIZATION_BASIC_ANNUAL_PRICE_ID=""
STRIPE_ORGANIZATION_PRO_MONTHLY_PRICE_ID=""
STRIPE_ORGANIZATION_PRO_ANNUAL_PRICE_ID=""

# Google Ads Platform Price IDs
STRIPE_GOOGLE_ADS_STARTER_MONTHLY_PRICE_ID=""
STRIPE_GOOGLE_ADS_STARTER_ANNUAL_PRICE_ID=""
STRIPE_GOOGLE_ADS_PRO_MONTHLY_PRICE_ID=""
STRIPE_GOOGLE_ADS_PRO_ANNUAL_PRICE_ID=""

# TikTok Platform Price IDs
STRIPE_TIKTOK_STARTER_MONTHLY_PRICE_ID=""
STRIPE_TIKTOK_STARTER_ANNUAL_PRICE_ID=""
STRIPE_TIKTOK_PRO_MONTHLY_PRICE_ID=""
STRIPE_TIKTOK_PRO_ANNUAL_PRICE_ID=""

# ===========================================
# Google AI (Gemini)
# ===========================================

# API Key for Google AI Studio
GOOGLE_AI_STUDIO_API_KEY=""

# Model Names (with defaults)
GOOGLE_AI_MODEL="gemini-2.0-flash"
GOOGLE_AI_PLAN_MODEL="gemini-2.5-flash-lite"
GOOGLE_AI_IMAGE_MODEL="gemini-2.5-flash-image"

# ===========================================
# Application
# ===========================================

# Frontend URL (for CORS and redirects)
FRONTEND_URL="http://localhost:3000"

# Server Configuration
PORT=3001
NODE_ENV="development"

# ===========================================
# TikTok Marketing API
# ===========================================

# TikTok Developer App Credentials
TIKTOK_APP_ID="your_tiktok_app_id"
TIKTOK_APP_SECRET="your_tiktok_app_secret"

# OAuth Redirect URI (must match TikTok Developer portal configuration)
TIKTOK_REDIRECT_URI="http://localhost:3001/tiktok/auth/callback"

# Set to 'true' for sandbox/testing environment
TIKTOK_SANDBOX_MODE="false"

# ===========================================
# Google Ads API
# ===========================================

# Google Ads API Credentials (can reuse Google OAuth credentials)
GOOGLE_ADS_CLIENT_ID=""
GOOGLE_ADS_CLIENT_SECRET=""

# Google Ads Developer Token (from Google Ads API Center)
GOOGLE_ADS_DEVELOPER_TOKEN=""

# OAuth Redirect URI
GOOGLE_ADS_REDIRECT_URI="http://localhost:3001/google-ads/auth/callback"

# Login Customer ID (for MCC accounts, optional)
GOOGLE_ADS_LOGIN_CUSTOMER_ID=""

# Set to 'true' for test/sandbox mode
GOOGLE_ADS_TEST_MODE="false"

# Cache settings
GOOGLE_ADS_CACHE_ENABLED="true"
GOOGLE_ADS_CACHE_TTL_HOURS="6"